<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logobrain"
        />

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingRight="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/labor"
        android:textColor="@color/colorPreguntas"
        android:textSize="15sp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_task"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="80dp"
        android:paddingRight="69dp"
        android:hint="Take my pill"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingRight="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:textSize="15sp"
        android:text="@string/CuandoSeHAce"
        android:textStyle="italic"
        android:textColor="@color/colorPreguntas"
        android:layout_marginBottom="5dp"
        />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:id="@+id/checkMonday"
        android:paddingLeft="10dp"
        android:layoutDirection="rtl"
        android:text="@string/Lunes"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:id="@+id/checkTuesday"
        android:layoutDirection="rtl"
        android:textColor="@color/gray"
        android:text="@string/Martes"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:id="@+id/checkWednesday"
        android:layoutDirection="rtl"
        android:paddingLeft="10dp"
        android:text="@string/Miercoles"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textColor="@color/gray"
        android:layoutDirection="rtl"
        android:text="@string/Jueves"
        android:id="@+id/checkThursday"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:layoutDirection="rtl"
        android:text="@string/Viernes"
        android:id="@+id/checkFriday"
        android:paddingLeft="10dp"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:layoutDirection="rtl"
        android:text="@string/Sabado"
        android:id="@+id/checkSaturday"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="20sp"
        android:layoutDirection="rtl"
        android:text="@string/Domingo"
        android:textColor="@color/gray"
        android:id="@+id/checkSunday"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingLeft="80dp"
        android:paddingRight="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/aQueHora"
        android:textColor="@color/colorPreguntas"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="80dp"
        android:paddingRight="69dp"
        android:hint="Set time"
        android:textSize="18sp"
        android:id="@+id/btn_time"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:hint="Done"
        android:background="@color/colorAccent"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:id="@+id/btn_save"
        />


</LinearLayout>